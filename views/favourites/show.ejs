<h2>Favoritos de <%=session.user.username%></h2>
<% if (quizes) { %>
<table>
	 <% var i; for (i=0; i < quizes.length; i++) { %>
	   <tr>
	     <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		 <td>
		<form method="post" action="/user/<%= session.user.id %>/favourites/<%= quizes[i].id %>?_method=delete">
			 <button class="waves-effect waves-teal btn-flat" type="submit" onClick="return confirm('Eliminar: <%= quizes[i].pregunta %> de Favoritos');"><i class="mdi-action-star-rate"></i></button>
		</form>
		 </td>
	   </tr>
	 <% } %>
</table>
<% } %>